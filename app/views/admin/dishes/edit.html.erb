<h1 class="text-color">Cập nhật danh mục</h1>
<div class="row">
  <div class="col-md-6 offset-3">
    <%= form_for([:admin, @dish]) do |f| %>

      <%= f.label "Tên", class: 'text-color' %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label "Giá" %>
      <%= f.number_field :price, class: 'form-control' %>

      <%= f.label "Nội dung" %>
      <%= f.text_area :content , class: 'form-control' %>
      <br>
      <%= f.submit "Cập nhật", class: "btn btn-primary" %>

      <span class="image">
        <%= f.file_field :image %>
      </span>

      <%= f.label :category_id %>
      <%= f.select :category_id, Category.pluck(:name, :id) , class: 'form-control' %>
    <% end %>
  </div>
</div>
