<h1 class="text-color">Tất cả danh mục</h1>
<%= will_paginate %>
  <div>
    <p><%= link_to "Tạo danh mục", new_admin_category_path, class: 'text-color'%></p>
  </div>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>STT</th>
        <th>Tên</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each_with_index do |category, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= link_to category.name, edit_admin_category_path(category),class: 'text-color' %></td>
          <td><%= link_to "Xoá", [:admin, category], method: :delete, class: 'text-color',
                                          data: { confirm: "Bạn có muốn xoá không?" } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<%= will_paginate %>
