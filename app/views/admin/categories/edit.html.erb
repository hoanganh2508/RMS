<h1 class="text-color">Cập nhật danh mục</h1>
<div class="row">
  <div class="col-md-6 offset-3">
    <%= form_for([:admin, @category]) do |f| %>

      <%= f.label "Tên", class: 'text-color' %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.submit "Cập nhật", class: "btn btn-primary mb-5 mt-3" %>
      <% end %>
  </div>
</div>
